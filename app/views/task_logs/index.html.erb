<h1 class="page-header">Task Logs</h1>
<%= link_to "Today only", :show_tasks => "today" %> | 
<%= link_to "All", :show_tasks => "all" %>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Task</th>
      <th>Name</th>
      <th>Description</th>
      <th>Duration</th>
      <th>Date</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @task_logs.each do |task_log| %>
      <tr>
        <td><%= task_log.task.category_reference_url %></td>
        <td><%= task_log.name %></td>
        <%= content_tag(:td, truncate(task_log.description, length: 65), title: task_log.description) %>
        <td><%= task_log.duration %></td>
        <td><%= l task_log.date  %></td>
        <td class="actions-td">
          <%= link_to 'Show', task_log, class: 'btn btn-primary' %>
          <%= link_to 'Edit', edit_task_log_path(task_log), class: 'btn btn-primary' %>
          <%= link_to 'Destroy', task_log, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Daily Task', new_task_log_path, class: 'btn btn-primary' %>
<br />
<br />
Today you did <%= @today_tasks_time %> hour(s).